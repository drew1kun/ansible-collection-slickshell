"==================================== FZF ======================================
" Disable fzf status line:
"let g:fzf_nvim_statusline = 0

" Custom status line:
"function! s:fzf_statusline()
"  " Override statusline as you like
"  highlight fzf1 ctermfg=161 ctermbg=251
"  highlight fzf2 ctermfg=23 ctermbg=251
"  highlight fzf3 ctermfg=237 ctermbg=251
"  setlocal statusline=%#fzf1#\ >\ %#fzf2#fz%#fzf3#f
"endfunction

command! AirlineThemes call fzf#run({
  \ 'source':  map(split(globpath(&rtp, 'autoload/airline/themes/*.vim'), "\n"),
  \               "substitute(fnamemodify(v:val, ':t'), '\\..\\{-}$', '', '')"),
  \ 'sink':    'AirlineTheme',
  \ 'options': '+m --prompt="Airline Themes> "',
  \ 'down':    '~40%'
  \})

"FZF Key bindings:
" https://www.reddit.com/r/vim/comments/bxrhds/today_i_was_heavily_procrastinating_and_found/
"let g:fzf_layout = { 'up': '~50%' } " Moves fzf window to the top (may be useful)

noremap  <silent> <space> :Files<CR>

nnoremap <silent> <Leader>b  :Buffers<CR>
nnoremap <silent> <Leader>f  :Rg<CR>
nnoremap <silent> <Leader>/  :BLines<CR>
nnoremap <silent> <Leader>'  :Marks<CR>
nnoremap <silent> <Leader>g  :Commits<CR>
nnoremap <silent> <Leader>H  :Helptags<CR>
nnoremap <silent> <Leader>hh :History<CR>
nnoremap <silent> <Leader>h: :History:<CR>
nnoremap <silent> <Leader>h/ :History/<CR>

nnoremap <silent> <Leader>ag :Ag <C-R><C-W><CR>
xnoremap <silent> <Leader>ag y:Ag <C-R>"<CR>
